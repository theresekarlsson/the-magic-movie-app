<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.kau.TK14_themagicmovieapp.MovieMainActivity"
    tools:ignore="ContentDescription"
     >
     
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instruction"
        android:textSize="18dp"
        tools:ignore="SpUsage"
        android:paddingBottom="5dp" >

	</TextView>
	
	<LinearLayout
	    android:id="@+id/searchArea"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/header"
		android:background="@drawable/bg_shape"
		android:gravity="center"
		android:orientation="horizontal" >
		
		<EditText
		    android:id="@+id/searchField"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/noborder"
			android:hint=""
			android:padding="8dp"
			android:singleLine="true" />
		
		<FrameLayout
		    android:id="@+id/imageSearchButton"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="5dp"
		    android:foreground="?android:attr/selectableItemBackground"
		    android:onClick="onClick" >
		
		    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@android:drawable/ic_menu_search" />
			
			</FrameLayout>
	</LinearLayout>
	
	<RelativeLayout
	    android:id="@+id/favButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/searchArea"
		android:padding="5dp"

	    android:layout_centerHorizontal="true"
	    android:onClick="onClick" >

	    <ImageView
	        android:id="@+id/star"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/star"
	        android:layout_centerVertical="true" />
	    
	    <TextView 
	        android:text="@string/favTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/star"
	        android:layout_centerVertical="true"
	        />
    </RelativeLayout>
	
	<ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@id/favButton" >
    </ListView>

</RelativeLayout>
